<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
        }

        label {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        input[type="text"] {
            padding: 10px;
            font-size: 1rem;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        button {
            padding: 10px 20px;
            font-size: 1rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        table {
            width: 80%;
            margin: 30px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        thead {
            background-color: #4CAF50;
            color: white;
        }

        th,
        td {
            text-align: center;
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        @media (max-width: 768px) {
            form {
                width: 90%;
            }

            table {
                width: 95%;
            }
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shortify</title>
</head>

<body>
    <h1>URL Shortener</h1>
    <% if(locals.id){ %>
        <p>URL Generated: http://localhost:8000/url/<%= id %>
        </p>
        <% } %>
            <div>
                <form method="post" action="/url">
                    <label>Enter URL to shorten:</label>
                    <input type="text" name="url" placeholder="https://www.example.com">
                    <button type="submit">Generate</button>
                </form>
            </div>
            <div>
                <% if(locals.urls){ %>
                    <table>
                        <thead>
                            <th>Sl. No.</th>
                            <th>Short ID</th>
                            <th>Original URL</th>
                            <th>Clicks</th>
                        </thead>
                        <tbody>
                            <% urls.forEach(function(url, index){ %>
                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td>
                                        <%= url.shortId %>
                                    </td>
                                    <td>
                                        <%= url.redirectUrl %>
                                    </td>
                                    <td>
                                        <%= url.visitHistory.length %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>
            </div>
</body>

</html>